{
  "manifest_version": 3,
  "name": "Allowlistâ€‘Only Browsing (JSON Config)",
  "version": "2.0.0",
  "description": "Restrict browsing to domains defined in whitelist.json. No UI - edit JSON file directly.",
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestFeedback"
  ],
  "host_permissions": ["*://*/*"],
  "background": { 
    "service_worker": "background.js", 
    "type": "module" 
  },
  "web_accessible_resources": [
    {
      "resources": ["whitelist.json"],
      "matches": ["<all_urls>"]
    }
  ],
  "commands": {
    "reload-config": {
      "description": "Reload whitelist configuration",
      "suggested_key": {
        "default": "Ctrl+Shift+R",
        "mac": "Command+Shift+R"
      }
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
